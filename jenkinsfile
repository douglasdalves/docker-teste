pipeline {
    environment {
        imagename = "doug18dalves/docker-teste:v2"
        registryCredential = 'login_docker_hub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Building image') {
            steps {
                sh 'docker build -t ${imagename} .'
                echo '-----------------'
                sh 'docker images | grep docker-teste'
            }
        }
        stage("start da imagem") {
            steps {
                sh 'docker run -d --name docker_html -p 6060:3000 ${imagename}'
                echo '-----------------'
                sh 'docker ps | grep docker_html'
            }
        }
        stage('Deploy Image') {
            steps{
                withDockerRegistry([ credentialsId: "login_docker_hub", url: "" ]) {
                    sh 'docker push ${imagename}'
                }
            }
        }
    }
}
