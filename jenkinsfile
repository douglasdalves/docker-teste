pipeline {
    agent any
    environment {
        JOB_DISPLAY_URL = 'doug18dalves/docker-teste:v2'
        DOCKERHUB_CREDENTIALS = credentials('acesso_docker_hub')
    }
    stages {
        stage("build da imagem") {
            steps {
                sh 'docker build -t ${JOB_DISPLAY_URL} .'
                echo '-----------------'
                sh 'docker images | grep docker-teste'
                echo '-----------------'
            }
        }
        stage("deploy da imagem") {
            steps {
                sh 'docker run -d --name docker_html -p 6060:3000 ${JOB_DISPLAY_URL}'
                echo '-----------------'
                sh 'docker ps | grep docker_html'
                echo '-----------------'
            }
        }
        stage("push da imagem") {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                echo '-----------------'
                echo 'Subindo a imagem no docker hub'
                echo '-----------------'
                sh 'docker push ${JOB_DISPLAY_URL}'
            }
        }
    }
}
